# ============================================
# REACT + VITE ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your actual values
# Note: Only variables prefixed with VITE_ are exposed to the client

# ============================================
# APPLICATION CONFIGURATION
# ============================================
VITE_APP_NAME="My React App Template"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="A modern React template with TypeScript, Vite, TailwindCSS, ShadCN, and more"

# Environment (development, staging, production)
VITE_NODE_ENV="development"

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL
VITE_API_URL="http://localhost:3001/api"
VITE_API_TIMEOUT=10000

# External API Keys (prefix with VITE_ to expose to client)
VITE_GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_key_here"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT Secret (server-side only)
JWT_SECRET="your_super_secret_jwt_key_here_make_it_long_and_random"
JWT_EXPIRES_IN="7d"

# OAuth Providers
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Session secret
SESSION_SECRET="your_session_secret_here"

# ============================================
# EXTERNAL SERVICES
# ============================================
# Email service (e.g., SendGrid, Mailgun)
SENDGRID_API_KEY="your_sendgrid_api_key"
FROM_EMAIL="noreply@yourapp.com"

# File storage (e.g., AWS S3, Cloudinary)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-app-bucket"

CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Enable/disable debugging features
VITE_DEBUG_MODE="false"
VITE_SHOW_REDUX_DEVTOOLS="true"

# ============================================
# DOCKER & DEPLOYMENT
# ============================================
# Port configuration
PORT=3000
VITE_PORT=5173

# Docker compose settings
COMPOSE_PROJECT_NAME="my-react-app"

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Google Analytics
VITE_GA_TRACKING_ID="G-XXXXXXXXXX"

# Sentry for error tracking
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ============================================
# FEATURE FLAGS
# ============================================
VITE_FEATURE_NEW_DASHBOARD="false"
VITE_FEATURE_BETA_FEATURES="false"

# ============================================
# CORS & SECURITY
# ============================================
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"
ALLOWED_HOSTS="localhost,127.0.0.1"

# ============================================
# EXAMPLE VALUES (REMOVE IN PRODUCTION)
# ============================================
# Example of how to structure your actual .env file:
# VITE_API_URL="https://api.yourapp.com"
# JWT_SECRET="abc123def456ghi789jkl012mno345pqr678stu901vwx234yz"